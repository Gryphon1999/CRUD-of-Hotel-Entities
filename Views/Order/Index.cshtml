@model IEnumerable<Order>
<h1>Index</h1>
<hr />
<div class="container">
    <a asp-action="Create" asp-controller="Order" class="btn btn-primary">Create</a>
    <br><br>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Room Number</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Order Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="table-primary">
            <tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.RoomNum</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.OrderType.Name</td>
                    <td>
                        <a asp-route-id="@item.Id" asp-action="Edit" asp-controller="Order">Edit</a> ||
                        <a asp-route-id="@item.Id" asp-action="Delete" asp-controller="Order">Delete</a>
                    </td>
                </tr>
                }

            </tr>
        </tbody>
    </table>
</div>