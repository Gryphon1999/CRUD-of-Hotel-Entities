@model HotelWebSystem.Models.Order

@{
    ViewData["Title"] = "Create";
    var orderTypes = ViewData["OrderTypes"] as IEnumerable<OrderType>;
}

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-6">
                <label asp-for="RoomNum" class="control-label">Room Number</label>
                <input asp-for="RoomNum" class="form-control" />
                <span asp-validation-for="RoomNum" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Quantity" class="control-label">Quantity</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
           <div class="form-group col-6">
                @Html.LabelFor(model => model.OrderTypeId, "Order Type", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model=>model.OrderTypeId,new SelectList(orderTypes,"Id","Name"),htmlAttributes: new {@class="form-control"})
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
