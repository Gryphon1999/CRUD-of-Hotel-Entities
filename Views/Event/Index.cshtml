@model IEnumerable<HotelWebSystem.Models.Events>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h2>Events</h2>
    <a asp-action="Create" class="btn btn-primary btn-sm">Add New</a>
    <hr>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <h4>
                 @item.EventType <br>
                </h4>
                <strong>
                    Costs: Rs. @item.Price <br>
                    Location: @item.Location <br>
                    Valid Time: @item.Time <br>
                </strong>
                <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                <br><br>
            </div>
        }
    </div>
    <hr>
</div>