@model IEnumerable<HotelWebSystem.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Save" class="btn btn-primary">Create New</a>
</p>
<div class="aa-search-box">
    <form asp-action="Index" method="get">
        <input type="text" name="searchItems" placeholder="Search">
        <button type="submit" class="btn btn-success my-2 my-sm-0"><span>Search</span></button>
    </form>
</div>
<table class="table table-bordered table-sm">
    <thead style="background-color:black; text-align:center; color:white; font-size:small;">
        <tr>
            <th>#</th>
            <th>Employee Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Salary</th>
            <th>Post</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model!=null)
        {
            var qn = 1;
            @foreach (var item in Model) {
            <tr class="table-primary">
                <td>@(qn++)</td>
                <td>
                    <img src="~/@item.ImgPath" height="50" width="50"/>
                    @item.EmployeeName
                </td>
                <td>@item.EmployeeAddress</td>
                <td>@item.EmployeeNumber</td>
                <td>@item.EmployeeSalary</td>
                <td>@item.EmployeePost</td>
                <td>
                <a asp-action="Save" asp-route-id="@item.EmployeeId" class="btn btn-outline-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-outline-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-outline-danger">Delete</a>
            </td>
            </tr> 
        }
}
    </tbody>
</table>
