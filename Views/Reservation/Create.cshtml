@model HotelWebSystem.Models.Reservation

@{
    ViewData["Title"] = "Create";
    var roomType = ViewData["roomType"] as IEnumerable<RoomType>;
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="CheckIn" class="control-label">Check In</label>
                    <input asp-for="CheckIn" class="form-control" />
                    <span asp-validation-for="CheckIn" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="CheckOut" class="control-label">Check Out</label>
                    <input asp-for="CheckOut" class="form-control" />
                    <span asp-validation-for="CheckOut" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="RoomTypeId" class="control-label">Room Types</label>
                    <select asp-for="RoomTypeId" asp-items="@(new SelectList(roomType,"Id","Name"))" class="form-control"></select>
                    <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="NoOfChilderns" class="control-label">No. of Childerns</label>
                    <input asp-for="NoOfChilderns" class="form-control" />
                    <span asp-validation-for="NoOfChilderns" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="NoOfAdults" class="control-label">No. of Adults</label>
                    <input asp-for="NoOfAdults" class="form-control" />
                    <span asp-validation-for="NoOfAdults" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="NoOfNights" class="control-label">No. of Nights</label>
                    <input asp-for="NoOfNights" class="form-control" />
                    <span asp-validation-for="NoOfNights" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                @if (Model.Id == 0)
                {
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Back to List</a>
                }
                else
                {
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Back to List</a>
                }
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
