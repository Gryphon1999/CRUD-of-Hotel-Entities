@model IEnumerable<Menu>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>List of Menu</h1>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <hr>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <img src="~/@item.ImgPath" height="100" width="100" class="rounded" /><br>
                <strong>@item.Name</strong> <br>
                @item.Description <br>
                Rs. @item.Price <br>
                @item.Category.Name <br>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                <br><br>
            </div>
        }
    </div>
    <hr>
</div>